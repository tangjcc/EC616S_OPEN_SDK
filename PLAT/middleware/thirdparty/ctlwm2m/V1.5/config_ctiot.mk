# compile option

#######################################
# use lwm2m client
#######################################
LWM2M_CLIENT_MODE := yes

#######################################
# use json
#######################################
LWM2M_SUPPORT_JSON := yes

#######################################
# use ENDIAN
#######################################
LWM2M_BIG_ENDIAN := no

#######################################
# use nb sdk
#######################################
NB_SDK := yes

#######################################
# use mbedtls
#######################################
WITH_MBEDTLS := yes

#######################################
# use auto response observer /3/0
#######################################
WITH_AUTO_RESP := yes

#######################################
# use SM9
#######################################
USE_SM9 := no

#######################################
# Lwm2m core log
#######################################
LWM2M_WITH_LOGS := no

#######################################
# ctiot log
#######################################
WITH_CTIOT_LOGS := yes

#######################################
# ctiot sdk heap trace
#######################################
CTIOT_HEAP_TRACE := no

#######################################
# fota
#######################################
USE_FOTA := yes

#######################################
# fota resume from break point
#######################################
USE_FOTA_RESUME := yes



